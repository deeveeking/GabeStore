
@{
    ViewData["Title"] = "Registration";
}

<head>
    <meta charset="utf-8">
    <title>Логин</title>
    <link rel="stylesheet" href="~/css/Registration.css">
</head>


<body>

    <div class="container">
        <div class="form">
            <h2>Регистрация</h2>
            <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
                <div class="inputBox">
                    <input type="text" placeholder="Имя">
                </div>
                <div class="inputBox">
                    <input type="text" placeholder="Фамилия">
                </div>
                <div class="inputBox">
                    <input type="" placeholder="Е-мейл">
                </div>
                <div class="inputBox">
                    <input type="password" placeholder="Пароль">
                </div>
                <div class="inputBox">
                    <input type="password" placeholder="Подтвердите пароль">
                </div>
                <div class="inputBox">
                    <div class="neonbtn">
                        <input type="submit" value="Зарегестрироваться">
                    </div>
                </div>
                <p>Есть аккаунт? <a asp-action="Login" asp-controller="Account">Нажмите сюда</a></p>
            </form>
        </div>
    </div>


</body>

