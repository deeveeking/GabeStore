@{
    ViewData["Title"] = "Login";
}

<head>
    <meta charset="utf-8">
    <title>Логин</title>
    <link rel="stylesheet" href="~/css/Login.css">
</head>


<body>

    <div class="container">
        <div class="form">
            <h2>Авторизация</h2>
            <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
                <div class="inputBox">
                    <input type="" placeholder="Е-мейл">
                </div>
                <div class="inputBox">
                    <input type="password" placeholder="Пароль">
                </div>
                <div class="inputBox">
                    <div class="neonbtn">
                        <input type="submit"  value="Войти">
                        <a asp-action="Register" asp-controller="Account"><input type="button" value="Регистарция"></a>
                    </div>
                </div>
                <p>Забыли пароль? <a href="#">Нажмите сюда</a></p>
            </form>
        </div>
    </div>
</body>

